/* pages/notice/notice.wxss */

/* 消息框 */
.notice_box {
  position: relative;
  width: 100%;
  height: auto;
  margin: 20rpx 20rpx;
  border-radius: 16rpx;
}

.img {
  position: absolute;
  top: 5rpx;
  left: 5rpx;
}

.img image {
  width: 80rpx;
  height: 80rpx;
}

.notice {
  position: absolute;
  top: 5rpx;
  left: 85rpx;
  height: auto;
  color:orange;
  font-weight: 500;
  line-height: auto;
  padding: 10rpx 20rpx;
}

/* 没有消息 */
.notice_no {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  margin: 20rpx 20rpx;
  border-radius: 16rpx;
  background-color: #FFF;
}